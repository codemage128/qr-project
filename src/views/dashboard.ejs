<%- include('layout/header.ejs')%>

  <main id="main">
    <%- include('breadcrumbs')%>

      <section class="inner-page">
        <div class="container">
          <div class="row text-center">
            <div class="col">
              <%- include('./particials/msg') %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <div class="row mb-3">
                    <div class="col-lg-2 col-sm-12 mb-2">
                      <button class="btn btn-primary btn-block" data-toggle="modal" data-target="#chooseType">Activate
                        Tattoo</button>
                    </div>
                    <div class="col-lg-10 text-center">
                      <div class="row align-items-center">
                        <div class="col">
                          <h3>Activated Tattoos List</h3>
                        </div>
                      </div>
                      <hr>
                      <% if(user.qrcodes.length> 0) {%>
                        <% for(var i=0; i < qrs.length; i++) { %>
                          <form action="/update-link" method="POST">
                            <div class="row align-items-center">
                              <div class="col-lg-4 col-sm-12"><img src="<%= qrs[i].image %>"></div>
                              <div class="col-lg-5 col-sm-12">
                                <h4><a href="http://c.skanz.live/<%= qrs[i].code%>" target="_blank">
                                    <%= qrs[i].code%>
                                  </a></h4>
                                <input type="text" class="form-control" name="link" placeholder=""
                                  value="<%= qrs[i].link%>" />
                                <input type="hidden" name="id" value="<%= qrs[i].id%>" />
                                <input type="hidden" name="type" id="update_type" />
                              </div>
                              <div class="btn-group col-lg-2 mt-3" role="group">
                                <button type="submit" class="btn btn-outline-primary btn-update">Update</button>
                                <a href="/deactive-code?id=<%= qrs[i].id%>" type="button"
                                  class="btn btn-danger btn-deactive">Deactive</a>
                              </div>
                              <!-- <div class="col-lg-1 col-sm-2 mt-3"><button class="btn btn-danger" type="submit">Deactive</button></div>
                              <div class="col-lg-1 col-sm-2 mt-3"><button class="btn btn-primary" type="submit">Update</button></div> -->
                            </div>
                          </form>
                          <hr>
                          <% } %>
                            <% } else { %>
                              <div class="row align-items-center">
                                <div class="col">
                                  <h4>There is no activated Tattoo</h4>
                                </div>
                              </div>
                              <hr>
                              <%} %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
  </main>
  <!-- Modal -->
  <div class="modal fade" id="chooseType" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">

      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Enter tattoo code</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <form action="/active-tattoo" method="POST" id="activeTattoo">
              <div class="row">
                <div class="col">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">A</span>
                    </div>
                    <input type="text" maxlength="6" class="form-control code-label" placeholder="Label Number"
                      aria-label="Label Number" name="code" aria-describedby="basic-addon1">
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary btn-active-code">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <%- include('./particials/foot.ejs')%>
    <script>
      $(function () {

        $('.code-label').keypress(function (e) {
          var a = [];
          var k = e.which;

          for (i = 48; i < 58; i++)
            a.push(i);

          if (!(a.indexOf(k) >= 0))
            e.preventDefault();
        });
        $('.btn-active-code').click(function () {
          $('#activeTattoo').submit();
