<!doctype html>
<html>

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Skanz.live | User Profile </title>
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet'>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Noto Sans', sans-serif
        }

        html,
        body {
            height: 100%
        }

        body {
            display: grid;
            place-items: center;
            background: #eee
        }

        .card {
            width: 100%;
            border-radius: 50px;
            background: #eeeeee;
            box-shadow: 20px 20px 60px #cacaca, -20px -20px 60px #ffffff;
            border: none
        }
        @media (min-width: 1200px)
        {
            .card{
                width: 350px;
            }
        }
        .neo-button {
            margin: 5px;
            width: 80px;
            height: 80px;
            outline: 0 !important;
            cursor: pointer;
            color: #fff;
            font-size: 15px;
            border: none;
            margin-right: 10px;
            border-radius: 50%;
            background: #3c5877;
        }

        .neo-button:active {
            border-radius: 50%;
            background: linear-gradient(145deg, #d6d6d6, #ffffff);
            box-shadow: inset 20px 20px 60px #cacaca, inset -20px -20px 60px #ffffff
        }
        .text-personal {
            color: #5587bf;
        }
    </style>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <script type='text/javascript'
        src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js'></script>
    <script type='text/javascript'></script>
</head>

<body oncontextmenu='return false' class='snippet-body'>
    <div class="container d-flex justify-content-center">
        <div class="card p-3 py-4">
            <div class="text-center"> 
                <img src="<%= person.profilePicture %>" width="100" class="rounded-circle">
                <h3 class="mt-2">
                    <%= person.firstName %>
                        <%= person.lastName %>
                </h3> 
                <% if( person.visible) { %>
                <h4 ><a href="mailto:<%= person.email %>" class="text-personal"><%= person.email %></a></h4>
                <h4 ><a href="callto:<%= person.phone %>" class="text-personal"><%= person.phone %></a></h4>
                <div class="mb-3">
                    <a href="/save-contact/<%= person._id %>" class="btn btn-outline-secondary">Save Contact</a>
                </div>
                <span class="mt-1 clearfix">
                    <%= person.bio %>
                </span>
                <div class="social-buttons mt-5">
                    <% if(person.facebookFlag == true) { %><% if(person.facebook) { %> <a target="_blank" href="https://facebook.com/<%= person.facebook %>"><button class="neo-button"><i class="fa fa-facebook fa-2x"></i></button></a><% } %><% } %>
                    <% if(person.linkedinFlag == true) { %><% if(person.linkedin) { %> <a target="_blank" href="https://linkedin.com/<%= person.linkedin %>"><button class="neo-button"><i class="fa fa-linkedin fa-2x"></i></button></a><% } %><% } %>
                    <% if(person.twitterFlag == true) { %><% if(person.twitter) { %> <a target="_blank" href="https://twitter.com/<%= person.twitter %>"><button class="neo-button"><i class="fa fa-twitter fa-2x"></i></button></a><% } %><% } %>
                    <% if(person.instagramFlag == true) { %><% if(person.instagram) { %> <a target="_blank" href="https://instagram.com/<%= person.instagram %>"><button class="neo-button"><i class="fa fa-instagram fa-2x"></i></button></a><% } %><% } %>
                    <% if(person.spotifyFlag == true) { %><% if(person.spotify) { %> <a target="_blank" href="<%= person.spotify %>"><button class="neo-button"><i class="fa fa-spotify fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.pinterestFlag == true) { %><% if(person.pinterest) { %> <a target="_blank" href="<%= person.pinterest %>"><button class="neo-button"><i class="fa fa-pinterest fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.skypeFlag == true) { %><% if(person.skype) { %> <a target="_blank" href="<%= person.skype %>"><button class="neo-button"><i class="fa fa-skype fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.whatsappFlag == true) { %><% if(person.whatsapp) { %> <a target="_blank" href="<%= person.whatsapp %>"><button class="neo-button"><i class="fa fa-whatsapp fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.youtubeFlag == true) { %><% if(person.youtube) { %> <a target="_blank" href="<%= person.youtube %>"><button class="neo-button"><i class="fa fa-youtube fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.safariFlag == true) { %><% if(person.safari) { %> <a target="_blank" href="<%= person.safari %>"><button class="neo-button"><i class="fa fa-safari fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.docFlag == true) { %><% if(person.doc) { %> <a target="_blank" href="<%= person.doc %>"><button class="neo-button"><i class="fa fa-file fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.paypalFlag == true) { %><% if(person.paypal) { %> <a target="_blank" href="<%= person.paypal %>"><button class="neo-button"><i class="fa fa-paypal fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.shopFlag == true) { %><% if(person.shop) { %> <a target="_blank" href="<%= person.shop %>"><button class="neo-button"><i class="fa fa-shopping-bag fa-2x"></i> </button></a><% } %><% } %>
                    <% if(person.mailboxFlag == true) { %><% if(person.mailbox) { %> <a target="_blank" href="<%= person.mailbox %>"><button class="neo-button"><i class="fa fa-reply-all fa-2x"></i> </button></a><% } %><% } %>
                </div>
                <% } %>
            </div>
            
        </div>
    </div>
</body>

</html>