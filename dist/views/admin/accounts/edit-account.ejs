<%- include('../layout/header.ejs')%>
    <div class="container-fluid">
        <div class="row">
            <!-- column -->
            <div class="col-sm-8 offset-2">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material" method="POST" action="/dashboard/update-account">
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Full Name</label>
                                <div class="col-md-12">
                                    <input type="text" name="username" value="<%= account.username%>" class="form-control pl-0 form-control-line">
                                    <input type="hidden" name="id" value="<%= account._id%>">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Email</label>
                                <div class="col-md-12">
                                    <input type="email" class="form-control pl-0 form-control-line" name="email" value="<%= account.email%>">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Contact</label>
                                <div class="col-md-12">
                                    <input type="text" name="contact" value="<%= account.contact %>" class="form-control pl-0 form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Country</label>
                                <div class="col-md-12">
                                    <input type="text" name="country" value="<%= account.country %>" class="form-control pl-0 form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Address</label>
                                <div class="col-md-12">
                                    <input type="text" name="address" value="<%= account.address%>" class="form-control pl-0 form-control-line">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Custom Information</label>
                                <div class="col-md-12">
                                    <textarea rows="5" class="form-control pl-0 form-control-line" name="customInfo"><%= account.customInfo%></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 d-flex">
                                    <button class="btn btn-success mx-auto mx-md-0 text-white">Update Information</button>
                                    <a class="btn btn-outline-success ml-2" href="/dashboard/accounts">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/footer.ejs')%>