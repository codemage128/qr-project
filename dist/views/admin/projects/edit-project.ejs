<%- include('../layout/header.ejs')%>
    <div class="container-fluid">
        <div class="row">
            <!-- column -->
            <div class="col-10 offset-1">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material" action="/dashboard/update-project" enctype="multipart/form-data" method="POST">
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Project Title</label>
                                <div class="col-md-12">
                                    <input type="hidden" name="id" class="form-control pl-0 form-control-line" value="<%= data.id%>" />
                                    <input type="text" name="title" class="form-control pl-0 form-control-line" value="<%= data.title%>" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">Description</label>
                                <div class="col-md-12">
                                    <textarea rows="5" name="description" class="form-control pl-0 form-control-line"><%= data.description%></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Technologies.</label>
                                <div class="col-md-12">
                                    <input type="text" name="technologies" data-role="tagsinput" value="<%= data.technologies%>" class="form-control pl-0 form-control-line" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Github Link</label>
                                <div class="col-md-12">
                                    <input type="text" name="github" value="<%= data.github%>" class="form-control pl-0 form-control-line" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12 mb-0">Url</label>
                                <div class="col-md-12">
                                    <input type="text" name="url" value="<%= data.url%>" class="form-control pl-0 form-control-line" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-12 mb-0">Images</label>
                                <div class="col-md-12">
                                    <div class="input-images"></div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12 d-flex">
                                    <button class="btn btn-primary mx-auto mx-md-0 text-white" type="submit">
                  Update Project
                </button>
                                    <a class="btn btn-outline-primary ml-2" href="/dashboard/projects">Cancel </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/footer.ejs')%>